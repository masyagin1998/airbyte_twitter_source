{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Twitter Spec",
    "description": "Twitter Spec schema",
    "type": "object",
    "required": [
      "bearer_token",
      "mentions",
      "start_time"
    ],
    "additionalProperties": false,
    "properties": {
      "bearer_token": {
        "description": "Twitter API token",
        "type": "string"
      },
      "mentions": {
        "description": "list of mentioned accounts",
        "type": "array",
        "uniqueItems": true,
        "items": {
          "description": "",
          "type": "string",
          "examples": [
            "TwitterDev",
            "TwitterAPI"
          ]
        },
        "examples": [
          ["TwitterDev", "TwitterAPI"]
        ]
      },
      "start_time": {
        "description": "start time of scraping",
        "type": "string",
        "format": "date-time",
        "examples": [
          "2016-04-10T00:27:29",
          "2022-05-15T06:56:59"
        ],
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}$"
      },
      "timeout_ms": {
        "description": "timeout between requests to API",
        "type": "integer",
        "minimum": 0,
        "examples": [
          100,
          1000,
          5000
        ]
      },
      "max_tweets_per_req": {
        "description": "maximal number of returned tweets per requests",
        "type": "integer",
        "minimum": 1,
        "examples": [
          100,
          10,
          1
        ]
      }
    }
  }
}